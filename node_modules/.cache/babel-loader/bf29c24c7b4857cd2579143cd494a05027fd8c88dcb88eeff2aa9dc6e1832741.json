{"ast":null,"code":"import { ref, computed } from 'vue';\nimport { useAppStore } from './stores/app';\nexport default {\n  name: 'App',\n  setup() {\n    const appStore = useAppStore();\n    const loading = ref(false);\n\n    // 简化的钱包地址显示\n    const shortAddress = computed(() => {\n      if (appStore.walletAddress) {\n        return appStore.walletAddress.slice(0, 6) + '...' + appStore.walletAddress.slice(-4);\n      }\n      return '';\n    });\n\n    // 断开钱包连接\n    const disconnectWallet = () => {\n      appStore.disconnectWallet();\n    };\n    return {\n      loading,\n      appStore,\n      shortAddress,\n      disconnectWallet\n    };\n  }\n};","map":{"version":3,"names":["ref","computed","useAppStore","name","setup","appStore","loading","shortAddress","walletAddress","slice","disconnectWallet"],"sources":["/Users/Jordan/workSpace/temple/src/App.vue"],"sourcesContent":["<template>\n  <div id=\"app\">\n    <!-- 钱包状态显示（连接后在右上角显示） -->\n    <div v-if=\"appStore.isWalletConnected\" class=\"wallet-status\">\n      <div class=\"wallet-info\">\n        <span class=\"wallet-address\">{{ shortAddress }}</span>\n        <button @click=\"disconnectWallet\" class=\"disconnect-btn\">断开</button>\n      </div>\n    </div>\n\n    <!-- 路由视图 -->\n    <router-view />\n\n    <!-- 全局加载动画 -->\n    <div v-if=\"loading\" class=\"global-loading\">\n      <div class=\"loading-spinner\"></div>\n      <p>{{ $t('common.loading') }}</p>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { ref, computed } from 'vue'\nimport { useAppStore } from './stores/app'\n\nexport default {\n  name: 'App',\n  setup() {\n    const appStore = useAppStore()\n\n    const loading = ref(false)\n\n    // 简化的钱包地址显示\n    const shortAddress = computed(() => {\n      if (appStore.walletAddress) {\n        return appStore.walletAddress.slice(0, 6) + '...' + appStore.walletAddress.slice(-4)\n      }\n      return ''\n    })\n\n    // 断开钱包连接\n    const disconnectWallet = () => {\n      appStore.disconnectWallet()\n    }\n\n    return {\n      loading,\n      appStore,\n      shortAddress,\n      disconnectWallet\n    }\n  }\n}\n</script>\n\n<style lang=\"scss\">\n#app {\n  font-family: 'Avenir', Helvetica, Arial, sans-serif;\n  -webkit-font-smoothing: antialiased;\n  -moz-osx-font-smoothing: grayscale;\n  min-height: 100vh;\n  position: relative;\n}\n\n.wallet-status {\n  position: fixed;\n  top: 20px;\n  right: 20px;\n  z-index: 1000;\n\n  .wallet-info {\n    display: flex;\n    align-items: center;\n    gap: 10px;\n    background: rgba(255, 255, 255, 0.9);\n    border-radius: 25px;\n    padding: 8px 16px;\n    backdrop-filter: blur(10px);\n    border: 1px solid #e0e0e0;\n\n    .wallet-address {\n      font-size: 0.9rem;\n      color: #333;\n      font-weight: 500;\n    }\n\n    .disconnect-btn {\n      padding: 4px 12px;\n      border: 1px solid #dc3545;\n      background: white;\n      color: #dc3545;\n      border-radius: 15px;\n      cursor: pointer;\n      font-size: 0.8rem;\n      transition: all 0.3s;\n\n      &:hover {\n        background: #dc3545;\n        color: white;\n      }\n    }\n  }\n}\n\n.global-loading {\n  position: fixed;\n  top: 0;\n  left: 0;\n  width: 100%;\n  height: 100%;\n  background: rgba(0, 0, 0, 0.8);\n  display: flex;\n  flex-direction: column;\n  justify-content: center;\n  align-items: center;\n  z-index: 9999;\n  color: white;\n\n  .loading-spinner {\n    width: 50px;\n    height: 50px;\n    border: 4px solid #f3f3f3;\n    border-top: 4px solid #007bff;\n    border-radius: 50%;\n    animation: spin 1s linear infinite;\n    margin-bottom: 20px;\n  }\n\n  @keyframes spin {\n    0% { transform: rotate(0deg); }\n    100% { transform: rotate(360deg); }\n  }\n}\n\n// 响应式设计\n@media (max-width: 768px) {\n  .wallet-status {\n    top: 10px;\n    right: 10px;\n    \n    .wallet-info {\n      padding: 6px 12px;\n      \n      .wallet-address {\n        font-size: 0.8rem;\n      }\n      \n      .disconnect-btn {\n        padding: 3px 8px;\n        font-size: 0.7rem;\n      }\n    }\n  }\n}\n</style> "],"mappings":"AAsBA,SAASA,GAAG,EAAEC,QAAO,QAAS,KAAI;AAClC,SAASC,WAAU,QAAS,cAAa;AAEzC,eAAe;EACbC,IAAI,EAAE,KAAK;EACXC,KAAKA,CAAA,EAAG;IACN,MAAMC,QAAO,GAAIH,WAAW,CAAC;IAE7B,MAAMI,OAAM,GAAIN,GAAG,CAAC,KAAK;;IAEzB;IACA,MAAMO,YAAW,GAAIN,QAAQ,CAAC,MAAM;MAClC,IAAII,QAAQ,CAACG,aAAa,EAAE;QAC1B,OAAOH,QAAQ,CAACG,aAAa,CAACC,KAAK,CAAC,CAAC,EAAE,CAAC,IAAI,KAAI,GAAIJ,QAAQ,CAACG,aAAa,CAACC,KAAK,CAAC,CAAC,CAAC;MACrF;MACA,OAAO,EAAC;IACV,CAAC;;IAED;IACA,MAAMC,gBAAe,GAAIA,CAAA,KAAM;MAC7BL,QAAQ,CAACK,gBAAgB,CAAC;IAC5B;IAEA,OAAO;MACLJ,OAAO;MACPD,QAAQ;MACRE,YAAY;MACZG;IACF;EACF;AACF","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}