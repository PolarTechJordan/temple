{"ast":null,"code":"import { useRouter } from 'vue-router';\nimport { useAppStore } from '@/stores/app';\nimport { computed } from 'vue';\nexport default {\n  name: 'MeritPage',\n  setup() {\n    const router = useRouter();\n    const appStore = useAppStore();\n\n    // 语言感知的导航函数\n    const navigateTo = path => {\n      const currentPath = router.currentRoute.value.path;\n      const isEnglish = currentPath.startsWith('/en');\n      const targetPath = isEnglish ? `/en${path}` : path;\n      router.push(targetPath);\n    };\n\n    // 从store获取实际的功德分和等级信息\n    const meritScore = computed(() => appStore.meritPoints);\n    const meritLevel = computed(() => `Level ${appStore.userLevel}`);\n    const levelInfo = computed(() => appStore.currentLevelInfo);\n    return {\n      router,\n      appStore,\n      navigateTo,\n      meritScore,\n      meritLevel,\n      levelInfo\n    };\n  },\n  data() {\n    return {\n      levelIcon: '/images/level1.png',\n      auspiciousDay: '甲子日',\n      suitableActivities: ['祈福', '上香', '行善', '投资'],\n      unsuitableActivities: ['争执', '冲动', '破财', '熬夜']\n    };\n  },\n  methods: {\n    goToShare() {\n      this.navigateTo('/share');\n    },\n    goToStore() {\n      this.navigateTo('/store');\n    }\n  }\n};","map":{"version":3,"names":["useRouter","useAppStore","computed","name","setup","router","appStore","navigateTo","path","currentPath","currentRoute","value","isEnglish","startsWith","targetPath","push","meritScore","meritPoints","meritLevel","userLevel","levelInfo","currentLevelInfo","data","levelIcon","auspiciousDay","suitableActivities","unsuitableActivities","methods","goToShare","goToStore"],"sources":["/Users/Jordan/workSpace/temple/src/views/MeritPage.vue"],"sourcesContent":["<template>\n  <div class=\"merit-page\">\n    <div class=\"container\">\n      <h1>{{ $t('merit.title') }}</h1>\n      <div class=\"merit-container\">\n        <div class=\"merit-left\">\n          <div class=\"merit-score\">\n            <h2>功德分</h2>\n            <div class=\"score-display\">{{ meritScore }}</div>\n            <div class=\"level-info\">\n              <span class=\"level\">{{ meritLevel }}</span>\n              <img :src=\"levelIcon\" :alt=\"meritLevel\" class=\"level-icon\" />\n            </div>\n          </div>\n        </div>\n        \n        <div class=\"merit-center\">\n          <div class=\"action-buttons\">\n            <button @click=\"goToShare\" class=\"action-btn share-btn\">\n              分享福报\n            </button>\n            <button @click=\"goToStore\" class=\"action-btn store-btn\">\n              法物商城\n            </button>\n          </div>\n        </div>\n        \n        <div class=\"merit-right\">\n          <div class=\"daily-fortune\">\n            <h2>每日运势</h2>\n            <div class=\"fortune-content\">\n              <div class=\"auspicious-day\">\n                <h3>黄道吉日</h3>\n                <p>{{ auspiciousDay }}</p>\n              </div>\n              <div class=\"recommendations\">\n                <div class=\"suitable\">\n                  <h4>宜：</h4>\n                  <ul>\n                    <li v-for=\"item in suitableActivities\" :key=\"item\">{{ item }}</li>\n                  </ul>\n                </div>\n                <div class=\"unsuitable\">\n                  <h4>忌：</h4>\n                  <ul>\n                    <li v-for=\"item in unsuitableActivities\" :key=\"item\">{{ item }}</li>\n                  </ul>\n                </div>\n              </div>\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { useRouter } from 'vue-router'\nimport { useAppStore } from '@/stores/app'\nimport { computed } from 'vue'\n\nexport default {\n  name: 'MeritPage',\n  setup() {\n    const router = useRouter()\n    const appStore = useAppStore()\n    \n    // 语言感知的导航函数\n    const navigateTo = (path) => {\n      const currentPath = router.currentRoute.value.path\n      const isEnglish = currentPath.startsWith('/en')\n      const targetPath = isEnglish ? `/en${path}` : path\n      router.push(targetPath)\n    }\n    \n    // 从store获取实际的功德分和等级信息\n    const meritScore = computed(() => appStore.meritPoints)\n    const meritLevel = computed(() => `Level ${appStore.userLevel}`)\n    const levelInfo = computed(() => appStore.currentLevelInfo)\n    \n    return {\n      router,\n      appStore,\n      navigateTo,\n      meritScore,\n      meritLevel,\n      levelInfo\n    }\n  },\n  data() {\n    return {\n      levelIcon: '/images/level1.png',\n      auspiciousDay: '甲子日',\n      suitableActivities: ['祈福', '上香', '行善', '投资'],\n      unsuitableActivities: ['争执', '冲动', '破财', '熬夜']\n    }\n  },\n  methods: {\n    goToShare() {\n      this.navigateTo('/share')\n    },\n    goToStore() {\n      this.navigateTo('/store')\n    }\n  }\n}\n</script>\n\n<style scoped>\n.merit-page {\n  min-height: 100vh;\n  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);\n  padding: 2rem;\n}\n\n.container {\n  max-width: 1200px;\n  margin: 0 auto;\n}\n\nh1 {\n  text-align: center;\n  color: white;\n  margin-bottom: 2rem;\n  font-size: 2.5rem;\n}\n\n.merit-container {\n  display: grid;\n  grid-template-columns: 1fr 1fr 1fr;\n  gap: 2rem;\n  background: rgba(255, 255, 255, 0.9);\n  border-radius: 20px;\n  padding: 2rem;\n  backdrop-filter: blur(10px);\n}\n\n.merit-left,\n.merit-right {\n  padding: 1.5rem;\n  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);\n  border-radius: 15px;\n}\n\n.merit-center {\n  display: flex;\n  align-items: center;\n  justify-content: center;\n}\n\n.merit-score {\n  text-align: center;\n}\n\n.merit-score h2 {\n  color: #333;\n  margin-bottom: 1rem;\n}\n\n.score-display {\n  font-size: 3rem;\n  font-weight: bold;\n  color: #667eea;\n  margin-bottom: 1rem;\n}\n\n.level-info {\n  display: flex;\n  align-items: center;\n  justify-content: center;\n  gap: 1rem;\n}\n\n.level {\n  font-size: 1.2rem;\n  font-weight: 600;\n  color: #333;\n}\n\n.level-icon {\n  width: 48px;\n  height: 48px;\n}\n\n.action-buttons {\n  display: flex;\n  flex-direction: column;\n  gap: 1rem;\n}\n\n.action-btn {\n  padding: 1rem 2rem;\n  border: none;\n  border-radius: 10px;\n  font-size: 1.2rem;\n  font-weight: 600;\n  cursor: pointer;\n  transition: all 0.3s ease;\n}\n\n.share-btn {\n  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);\n  color: white;\n}\n\n.store-btn {\n  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);\n  color: white;\n}\n\n.action-btn:hover {\n  transform: translateY(-2px);\n  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);\n}\n\n.daily-fortune h2 {\n  color: #333;\n  margin-bottom: 1rem;\n  text-align: center;\n}\n\n.auspicious-day {\n  margin-bottom: 1.5rem;\n  text-align: center;\n}\n\n.auspicious-day h3 {\n  color: #667eea;\n  margin-bottom: 0.5rem;\n}\n\n.recommendations {\n  display: flex;\n  flex-direction: column;\n  gap: 1rem;\n}\n\n.suitable h4 {\n  color: #28a745;\n  margin-bottom: 0.5rem;\n}\n\n.unsuitable h4 {\n  color: #dc3545;\n  margin-bottom: 0.5rem;\n}\n\n.suitable ul,\n.unsuitable ul {\n  list-style: none;\n  padding: 0;\n}\n\n.suitable li,\n.unsuitable li {\n  padding: 0.2rem 0;\n  font-size: 0.9rem;\n}\n\n@media (max-width: 768px) {\n  .merit-container {\n    grid-template-columns: 1fr;\n    gap: 1rem;\n  }\n  \n  .merit-left { order: 1; }\n  .merit-right { order: 2; }\n  .merit-center { order: 3; }\n}\n</style> "],"mappings":"AA0DA,SAASA,SAAQ,QAAS,YAAW;AACrC,SAASC,WAAU,QAAS,cAAa;AACzC,SAASC,QAAO,QAAS,KAAI;AAE7B,eAAe;EACbC,IAAI,EAAE,WAAW;EACjBC,KAAKA,CAAA,EAAG;IACN,MAAMC,MAAK,GAAIL,SAAS,CAAC;IACzB,MAAMM,QAAO,GAAIL,WAAW,CAAC;;IAE7B;IACA,MAAMM,UAAS,GAAKC,IAAI,IAAK;MAC3B,MAAMC,WAAU,GAAIJ,MAAM,CAACK,YAAY,CAACC,KAAK,CAACH,IAAG;MACjD,MAAMI,SAAQ,GAAIH,WAAW,CAACI,UAAU,CAAC,KAAK;MAC9C,MAAMC,UAAS,GAAIF,SAAQ,GAAI,MAAMJ,IAAI,EAAC,GAAIA,IAAG;MACjDH,MAAM,CAACU,IAAI,CAACD,UAAU;IACxB;;IAEA;IACA,MAAME,UAAS,GAAId,QAAQ,CAAC,MAAMI,QAAQ,CAACW,WAAW;IACtD,MAAMC,UAAS,GAAIhB,QAA